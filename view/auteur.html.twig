{% extends "components/layout.html.twig" %}

{% block content %}
    <main class="flex justify-center">
        <div class="flex flex-col justify-center m-auto min-w-125 max-w-lg">
            <div class="bg-blue-100 rounded-md p-3 mb-10 mt-10">
                <h1 class="text-4xl text-center my-5">
                    {{ author.prenom }}
                    {{ author.nom }}
                </h1>
                <p>{{ author.biographie }}</p>
                {% if session.role == "admin" %}
                    <div class="flex my-3">
                        <button class="hover:cursor-pointer p-1.5 mr-2 text-white bg-green-400 rounded-md">
                            <a href="">Modifier</a>
                        </button>
                        <button class="hover:cursor-pointer p-1.5 mr-2 text-white bg-red-400 rounded-md">
                            <a href="">Supprimer</a>
                        </button>
                    </div>
                {% endif %}
            </div>
        </div>
    </main>
{% endblock %}
